/**index.wxss**/
.container{
  height: 100%;
  display: flex;
  display: -webkit-flex;
  flex-direction: column;
}
.section{
  margin-top: 200rpx;
  width: 80%;
  height: 6%;
  background-color: #fff;
  font-size: 36rpx;
  text-align: center;
  border-radius: 8rpx;
  align-self: center;
}
.search{
  width: 100%;
  height: 100%;
  line-height: 100%;
}
.list_box{
  height: 50%;
  width: 80%;
  opacity: 0.5;
  align-self: center;  
  background-color: #fff;
}
.list_item{
  height: 40px;
  display: flex;
  border-bottom: 1px solid #efefef;
}
.album_pic{
  width: 40px;
  height: 40px;
  margin-right: 16rpx;  
}
.song_info{
  width: 80%;
}
.song_name{
  width: 90%;  
  font-size: 16px;
  line-height: 24px;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.artists_name{
  width: 90%;
  font-size: 10px;
  line-height: 16px;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}